#!/bin/sh -e

# Source debconf library.
. /usr/share/debconf/confmodule

db_input high _APP_NAME_/mysql/standalone || true
db_go

db_get _APP_NAME_/mysql/standalone
if [ "$RET" = "false" ]; then
  # Ask for credentials
  db_input high _APP_NAME_/mysql/db_host || true
  db_input high _APP_NAME_/mysql/db_port || true
  db_input high _APP_NAME_/mysql/db_username || true
  db_input high _APP_NAME_/mysql/db_password || true
  db_input high _APP_NAME_/mysql/db_name || true
  db_go
fi
