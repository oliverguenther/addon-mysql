#!/bin/sh -e

APP_NAME="_APP_NAME_"

# Source debconf library.
. /usr/share/debconf/confmodule

if [ -f /usr/share/dbconfig-common/dpkg/config.mysql ]; then
  dbc_authmethod_user="password"
  dbc_dbname="${APP_NAME}"
  dbc_dbuser="${APP_NAME}"

  . /usr/share/dbconfig-common/dpkg/config.mysql 
  dbc_go ${APP_NAME}-mysql $@
fi

